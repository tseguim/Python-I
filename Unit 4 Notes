#function definitions should be next
def testFunction():
  variable1 = 0
  variable2 = 2
  # the variables 1 and 2 above are only visible inside the function
  # if you call the variables outside the function, you will get a 
  # NameError:  name 'variable_name' is not defined in line ....
  print(variable1)


#there are two parameters to this function
# t stands for turtle
# sz stands for the side of the shape
def draw_square(t, sz):
  """Make turtle t draw a square of sz."""
  for i in range(4):
    t.forward(sz)
    t.left(90)

def draw_multicolor_square(t, sz):
  """Make turtle t draw a multi-color square of sz."""
  for i in ["red", "purple", "hotpink", "blue"]:
    t.color(i)
    t.forward(sz)
    t.left(90)

def final_amt(p, r, n, t):
  """
  Apply the compound interest formula to p
  to produce the final amount.
  """
  a = p * (1 + r/n) ** (n*t)
  return a         # This is new, and makes the function fruitful.



