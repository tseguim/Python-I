import random

def choose_word():
    words = ["apple", "banana", "cherry", "date", "elderberry", "fig", "grape", "honeydew", "kiwi", "lemon", "mango", "nectarine", "orange", "pear", "quince", "raspberry", "strawberry", "tangerine", "ugli", "watermelon"]
    return random.choice(words)

def display_word(word, guessed_letters):
    return "".join([letter if letter in guessed_letters else "_" for letter in word])

def hangman():
    word = choose_word()
    guessed_letters = set()
    num_guesses = 0
    max_guesses = 6
    while True:
        print(f"Word: {display_word(word, guessed_letters)}")
        print(f"Guessed letters: {' '.join(sorted(guessed_letters))}")
        guess = input("Enter a letter: ").lower()
        if guess in guessed_letters:
            print("You already guessed that letter.")
            continue
        guessed_letters.add(guess)
        if guess not in word:
            num_guesses += 1
            print(f"Sorry, {guess} is not in the word.")
            if num_guesses >= max_guesses:
                print(f"Sorry, you lose! The word was {word}.")
                break
        else:
            print(f"Good guess! {guess} is in the word.")
            if all(letter in guessed_letters for letter in word):
                print(f"Congratulations, you win! The word was {word}.")
                break

if __name__ == "__main__":
    print("Welcome to Hangman!")
    hangman()
